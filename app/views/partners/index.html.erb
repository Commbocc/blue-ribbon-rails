<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div id="map" class="embed-responsice embed-responsive-16by9 thumbnail"></div>
	</div>
</div>

<div class="table-responsive">
	<table class="table table-striped table-condensed">
		<thead>
			<tr>
				<th>Name</th>
				<th>Address</th>
			</tr>
		</thead>

		<tbody id="brc-partners">
			<% @partners.each do |partner| %>
			<tr class="brc-partner" data-path="<%= url_for partner %>" data-latitude="<%= partner.latitude %>" data-longitude="<%= partner.longitude %>">
				<td><%= link_to partner.name, partner %></td>
				<td><%= partner.address %></td>
			</tr>
			<% end %>
		</tbody>

	</table>
</div>

<div class="pagination-container text-center">
	<%= paginate @partners %>
</div>

<!-- Modal -->
<div class="modal fade" id="partnerModal" tabindex="-1" role="dialog" aria-labelledby="partnerModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content"></div>
	</div>
</div>
